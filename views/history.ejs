<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="main-layout">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <img src="/css/images/logo.png" alt="Logo" class="logo-image">
                </div>
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <svg viewBox="0 0 24 24">
                        <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
                    </svg>
                </button>
            </div>

            <nav class="sidebar-menu">
                <!-- MENU UTAMA -->
                <div class="menu-section">
                    <div class="menu-label">Menu Utama</div>
                    <a href="/" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/dashboard.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Dashboard</span>
                    </a>
                    <a href="/products" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/products.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Produk</span>
                    </a>
                    <a href="/purchases" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/purchases.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Pembelian</span>
                    </a>
                    <a href="/history" class="menu-item active">
                        <div class="menu-icon" style="background: url('/icons/history.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">History</span>
                    </a>
                </div>

                <!-- MENU TRANSAKSI -->
                <div class="menu-section">
                    <div class="menu-label">Transaksi</div>
                    <a href="/products/add" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/add.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Tambah Produk</span>
                    </a>
                    <a href="/purchases/add" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/cart.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Tambah Pembelian</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="main-content-wrapper">
            <!-- Top Bar -->
            <header class="top-bar">
                <h1 class="page-title"><%= title %></h1>
                <div class="top-bar-actions">
                    <div class="user-profile">
                        <div class="user-avatar">AD</div>
                        <span>Admin</span>
                    </div>
                </div>
            </header>

            <!-- Main Content Area -->
            <main class="main-content">
                <div class="content-section">
                    <div class="section-header">
                        <h2 class="section-title">Riwayat Pergerakan Stock</h2>
                    </div>

                    <div class="table-responsive">
                        <table class="data-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Produk</th>
                                    <th>Jenis</th>
                                    <th>Jumlah</th>
                                    <th>Keterangan</th>
                                    <th>Tanggal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (history && history.length > 0) { %>
                                    <% history.forEach(item => { %>
                                    <tr>
                                        <td><strong>#<%= item.id %></strong></td>
                                        <td><%= item.nama_produk %></td>
                                        <td>
                                            <% if (item.jenis === 'masuk') { %>
                                                <span class="badge badge-success">⬆️ Masuk</span>
                                            <% } else { %>
                                                <span class="badge badge-danger">⬇️ Keluar</span>
                                            <% } %>
                                        </td>
                                        <td><strong><%= item.jumlah %> unit</strong></td>
                                        <td><%= item.keterangan %></td>
                                        <td><%= new Date(item.created_at).toLocaleString('id-ID', { day: '2-digit', month: 'short', year: 'numeric', hour: '2-digit', minute: '2-digit' }) %></td>
                                    </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="6" style="text-align: center; padding: 30px;">
                                            Belum ada history pergerakan stock
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </main>

            <!-- Footer -->
            <footer>
                <p>&copy; 2024 Toko Admin. Built with Node.js & Express</p>
            </footer>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('collapsed');
        }
    </script>
</body>
</html>
