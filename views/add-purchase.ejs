<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="main-layout">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <img src="/css/images/logo.png" alt="Logo" class="logo-image">
                </div>
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <svg viewBox="0 0 24 24">
                        <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
                    </svg>
                </button>
            </div>

            <nav class="sidebar-menu">
                <div class="menu-section">
                    <div class="menu-label">Menu Utama</div>
                    <a href="/" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/dashboard.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Dashboard</span>
                    </a>
                    <a href="/products" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/products.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Produk</span>
                    </a>
                    <a href="/purchases" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/purchases.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Pembelian</span>
                    </a>
                </div>

                <div class="menu-section">
                    <div class="menu-label">Transaksi</div>
                    <a href="/purchases/add" class="menu-item active">
                        <div class="menu-icon" style="background: url('/icons/add.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Tambah Pembelian</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="main-content-wrapper">
            <!-- Top Bar -->
            <header class="top-bar">
                <h1 class="page-title"><%= title %></h1>
                <div class="top-bar-actions">
                    <div class="user-profile">
                        <div class="user-avatar">AD</div>
                        <span>Admin</span>
                    </div>
                </div>
            </header>

            <!-- Main Content Area -->
            <main class="main-content">
                <% if (error) { %>
                    <div class="alert alert-error">
                        <strong>Error!</strong> <%= error %>
                    </div>
                <% } %>

                <div class="content-section">
                    <div class="section-header">
                        <h2 class="section-title">Form Pembelian</h2>
                    </div>

                    <div class="form-card">
                        <form action="/purchases/add" method="POST" id="purchaseForm">
                            <div class="form-group">
                                <label for="produk_id">Pilih Produk *</label>
                                <select name="produk_id" id="produk_id" required onchange="updateProductInfo()">
                                    <option value="">-- Pilih Produk --</option>
                                    <% products.forEach(product => { %>
                                        <option value="<%= product.id %>" 
                                                data-harga="<%= product.harga %>" 
                                                data-stock="<%= product.stock %>">
                                            <%= product.nama_produk %> (Stock: <%= product.stock %>)
                                        </option>
                                    <% }) %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="jumlah">Jumlah *</label>
                                <input type="number" name="jumlah" id="jumlah" min="1" required oninput="calculateTotal()">
                                <small class="form-text">Stock tersedia: <span id="stockInfo">-</span></small>
                            </div>

                            <div class="purchase-summary">
                                <h3>Ringkasan Pembelian</h3>
                                <div class="summary-row">
                                    <span>Harga Satuan:</span>
                                    <strong id="hargaSatuan">Rp 0</strong>
                                </div>
                                <div class="summary-row">
                                    <span>Jumlah:</span>
                                    <strong id="jumlahDisplay">0</strong>
                                </div>
                                <div class="summary-row total">
                                    <span>Total:</span>
                                    <strong id="totalHarga">Rp 0</strong>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">
                                    <img src="/icons/check.svg" class="btn-icon" style="filter: brightness(0) invert(1);">
                                    Simpan Pembelian
                                </button>
                                <a href="/purchases" class="btn btn-secondary">
                                    <img src="/icons/close.svg" class="btn-icon">
                                    Batal
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </main>

            <!-- Footer -->
            <footer>
                <p>&copy; 2024 Toko Admin. Built with Node.js & Express</p>
            </footer>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('collapsed');
        }

        function updateProductInfo() {
            const select = document.getElementById('produk_id');
            const selectedOption = select.options[select.selectedIndex];
            const stock = selectedOption.dataset.stock;
            const harga = selectedOption.dataset.harga;
            
            document.getElementById('stockInfo').textContent = stock ? stock + ' unit' : '-';
            document.getElementById('hargaSatuan').textContent = harga ? 'Rp ' + Number(harga).toLocaleString('id-ID') : 'Rp 0';
            
            if (stock) {
                document.getElementById('jumlah').max = stock;
            }
            
            calculateTotal();
        }

        function calculateTotal() {
            const select = document.getElementById('produk_id');
            const selectedOption = select.options[select.selectedIndex];
            const harga = parseFloat(selectedOption.dataset.harga) || 0;
            const jumlah = parseInt(document.getElementById('jumlah').value) || 0;
            const total = harga * jumlah;
            
            document.getElementById('jumlahDisplay').textContent = jumlah + ' unit';
            document.getElementById('totalHarga').textContent = 'Rp ' + total.toLocaleString('id-ID');
        }

        document.getElementById('purchaseForm').addEventListener('submit', function(e) {
            const select = document.getElementById('produk_id');
            const selectedOption = select.options[select.selectedIndex];
            const stock = parseInt(selectedOption.dataset.stock) || 0;
            const jumlah = parseInt(document.getElementById('jumlah').value) || 0;
            
            if (jumlah > stock) {
                e.preventDefault();
                alert('Jumlah pembelian melebihi stock yang tersedia!');
            }
        });
    </script>
</body>
</html>