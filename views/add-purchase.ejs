<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="main-layout">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <img src="/css/images/logo.png" alt="Logo" class="logo-image">
                </div>
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <svg viewBox="0 0 24 24">
                        <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
                    </svg>
                </button>
            </div>

            <nav class="sidebar-menu">
                <div class="menu-section">
                    <div class="menu-label">Menu Utama</div>
                    <a href="/" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/dashboard.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Dashboard</span>
                    </a>
                    <a href="/products" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/products.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Produk</span>
                    </a>
                    <a href="/purchases" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/purchases.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Pembelian</span>
                    </a>
                    <a href="/history" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/history.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">History</span>
                    </a>
                </div>

                <div class="menu-section">
                    <div class="menu-label">Transaksi</div>
                    <a href="/products/add" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/add.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Tambah Produk</span>
                    </a>
                    <a href="/purchases/add" class="menu-item active">
                        <div class="menu-icon" style="background: url('/icons/cart.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Tambah Pembelian</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="main-content-wrapper">
            <!-- Top Bar -->
            <header class="top-bar">
                <h1 class="page-title"><%= title %></h1>
                <div class="top-bar-actions">
                    <div class="user-profile">
                        <div class="user-avatar">AD</div>
                        <span>Admin</span>
                    </div>
                </div>
            </header>

            <!-- Main Content Area -->
            <main class="main-content">
                <% if (error) { %>
                    <div class="alert alert-error">
                        <strong>Error!</strong> <%= error %>
                    </div>
                <% } %>

                <div class="content-section">
                    <div class="section-header">
                        <h2 class="section-title">Form Tambah Pembelian</h2>
                    </div>

                    <div class="form-card">
                        <form action="/purchases/add" method="POST">
                            <div class="form-group">
                                <label for="produk_id">Pilih Produk *</label>
                                <select name="produk_id" id="produk_id" required onchange="updatePrice()">
                                    <option value="">-- Pilih Produk --</option>
                                    <% if (products && products.length > 0) { %>
                                        <% products.forEach(product => { %>
                                        <option value="<%= product.id %>" data-price="<%= product.harga %>" data-stock="<%= product.stock %>">
                                            <%= product.nama_produk %> 
                                            (Stock: <%= product.stock %> | 
                                            Rp <%= Number(product.harga).toLocaleString('id-ID') %>)
                                        </option>
                                        <% }) %>
                                    <% } else { %>
                                        <option value="">Tidak ada produk dengan stock</option>
                                    <% } %>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="jumlah">Jumlah Beli *</label>
                                <input type="number" name="jumlah" id="jumlah" min="1" required placeholder="Contoh: 5" onchange="updateTotal()">
                                <small class="form-text">Berapa unit yang akan dibeli?</small>
                            </div>

                            <div class="purchase-summary">
                                <h3>Ringkasan Pembelian</h3>
                                <div class="summary-row">
                                    <span>Harga per unit:</span>
                                    <strong id="hargaSatuan">Rp 0</strong>
                                </div>
                                <div class="summary-row">
                                    <span>Jumlah unit:</span>
                                    <strong id="jumlahUnit">0</strong>
                                </div>
                                <div class="summary-row total">
                                    <span>Total Harga:</span>
                                    <strong id="totalHarga">Rp 0</strong>
                                </div>
                            </div>

                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary">
                                    <img src="/icons/check.svg" class="btn-icon" style="filter: brightness(0) invert(1);">
                                    Proses Pembelian
                                </button>
                                <a href="/purchases" class="btn btn-secondary">
                                    <img src="/icons/close.svg" class="btn-icon">
                                    Batal
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </main>

            <!-- Footer -->
            <footer>
                <p>&copy; 2024 Toko Admin. Built with Node.js & Express</p>
            </footer>
        </div>
    </div>

    <script>
        function updatePrice() {
            const select = document.getElementById('produk_id');
            const option = select.options[select.selectedIndex];
            const price = option.dataset.price || 0;
            const stock = option.dataset.stock || 0;
            
            document.getElementById('hargaSatuan').textContent = 'Rp ' + Number(price).toLocaleString('id-ID');
            document.getElementById('jumlahUnit').textContent = '0';
            document.getElementById('totalHarga').textContent = 'Rp 0';
            document.getElementById('jumlah').value = '';
            document.getElementById('jumlah').max = stock;
        }

        function updateTotal() {
            const select = document.getElementById('produk_id');
            const jumlah = parseInt(document.getElementById('jumlah').value) || 0;
            const option = select.options[select.selectedIndex];
            const price = parseInt(option.dataset.price) || 0;
            const stock = parseInt(option.dataset.stock) || 0;

            if (jumlah > stock) {
                alert(`Stock tidak cukup! Tersedia hanya ${stock} unit`);
                document.getElementById('jumlah').value = stock;
                return updateTotal();
            }

            const total = price * jumlah;
            document.getElementById('jumlahUnit').textContent = jumlah;
            document.getElementById('totalHarga').textContent = 'Rp ' + Number(total).toLocaleString('id-ID');
        }

        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('collapsed');
        }
    </script>
</body>
</html>
