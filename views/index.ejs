<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="main-layout">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <div class="logo">
                    <img src="/css/images/logo.png" alt="Logo" class="logo-image">
                </div>
                <button class="sidebar-toggle" onclick="toggleSidebar()">
                    <svg viewBox="0 0 24 24">
                        <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
                    </svg>
                </button>
            </div>

            <nav class="sidebar-menu">
                <div class="menu-section">
                    <div class="menu-label">Menu Utama</div>
                    <a href="/" class="menu-item active">
                        <div class="menu-icon" style="background: url('/icons/dashboard.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Dashboard</span>
                    </a>
                    <a href="/products" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/products.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Produk</span>
                    </a>
                    <a href="/purchases" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/purchases.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Pembelian</span>
                    </a>
                    <a href="/history" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/history.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">History</span>
                    </a>
                </div>

                <div class="menu-section">
                    <div class="menu-label">Transaksi</div>
                    <a href="/products/add" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/add.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Tambah Produk</span>
                    </a>
                    <a href="/purchases/add" class="menu-item">
                        <div class="menu-icon" style="background: url('/icons/cart.svg') center/contain no-repeat;"></div>
                        <span class="menu-text">Tambah Pembelian</span>
                    </a>
                </div>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="main-content-wrapper">
            <!-- Top Bar -->
            <header class="top-bar">
                <h1 class="page-title"><%= title %></h1>
                <div class="top-bar-actions">
                    <div class="user-profile">
                        <div class="user-avatar">AD</div>
                        <span>Admin</span>
                    </div>
                </div>
            </header>

            <!-- Main Content Area -->
            <main class="main-content">
                <!-- Stats Grid -->
                <div class="stats-grid">
                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon-wrapper blue">
                                <img src="/icons/box.svg" alt="Products" class="stat-icon">
                            </div>
                        </div>
                        <div class="stat-info">
                            <h3><%= stats.totalProducts %></h3>
                            <p>Total Produk</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon-wrapper green">
                                <img src="/icons/inventory.svg" alt="Stock" class="stat-icon">
                            </div>
                        </div>
                        <div class="stat-info">
                            <h3><%= stats.totalStock %></h3>
                            <p>Total Stock</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon-wrapper orange">
                                <img src="/icons/shopping-cart.svg" alt="Purchases" class="stat-icon">
                            </div>
                        </div>
                        <div class="stat-info">
                            <h3><%= stats.totalPurchases %></h3>
                            <p>Total Pembelian</p>
                        </div>
                    </div>

                    <div class="stat-card">
                        <div class="stat-header">
                            <div class="stat-icon-wrapper purple">
                                <img src="/icons/money.svg" alt="Revenue" class="stat-icon">
                            </div>
                        </div>
                        <div class="stat-info">
                            <h3>Rp <%= Number(stats.totalRevenue).toLocaleString('id-ID') %></h3>
                            <p>Total Pendapatan</p>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="content-section">
                    <div class="section-header">
                        <h2 class="section-title">Quick Actions</h2>
                    </div>
                    <div style="display: flex; gap: 15px; flex-wrap: wrap;">
                        <a href="/products/add" class="btn btn-primary">
                            <img src="/icons/plus.svg" class="btn-icon" style="filter: brightness(0) invert(1);">
                            Tambah Produk
                        </a>
                        <a href="/purchases/add" class="btn btn-primary">
                            <img src="/icons/cart.svg" class="btn-icon" style="filter: brightness(0) invert(1);">
                            Tambah Pembelian
                        </a>
                        <a href="/purchases" class="btn btn-secondary">
                            <img src="/icons/list.svg" class="btn-icon">
                            Lihat Semua Pembelian
                        </a>
                        <a href="/products" class="btn btn-secondary">
                            <img src="/icons/box.svg" class="btn-icon">
                            Kelola Produk
                        </a>
                        <a href="/history" class="btn btn-secondary">
                            <img src="/icons/history.svg" class="btn-icon">
                            Lihat History Stock
                        </a>
                    </div>
                </div>
            </main>

            <!-- Footer -->
            <footer>
                <p>&copy; 2024 Toko Admin. Built with Node.js & Express</p>
            </footer>
        </div>
    </div>

    <script>
        function toggleSidebar() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('collapsed');
        }
    </script>
</body>
</html>